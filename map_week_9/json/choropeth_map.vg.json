{
        
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "ICSEA score across melbourne",
  "width": 1000,
  "height": 800,
  "projection": {"type": "mercator"},
  "data": {
    "url": "../json/vic_localities_major_cities.json",
    "format": {"type": "topojson", "feature": "vic_localities"}
  },

  "layer":[
    {
      "transform": [
        {"calculate": "'Data is not available in ' + datum.properties.LOC_NAME", "as": "note"}
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.LOC_NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/whyamiin3168/FIT3179/main/map_week_9/data/vic_secondary_school_major_cities.csv"
            },
            "key": "Suburb",
            "fields": ["ICSEA"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "ICSEA",
          "type": "quantitative"
        },
        "tooltip": [
          {"field": "properties.LOC_NAME", "type": "nominal", "title": "Suburb"},
          {"field": "ICSEA", "type": "quantitative"}
        ]
      }
    }
  ]
}