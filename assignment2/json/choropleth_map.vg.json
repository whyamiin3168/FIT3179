{
        
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Indigenous Enrolments across Greater Melbourne Suburbs",
  "width": 400,
  "height": 700,
  "params": [
    {
        "name": "zoom_level",
        "value": 30000,
        "bind": {
            "input": "range",
            "min": 3500,
            "max": 60000,
            "step": 100,
            "name": "Zoom: "
        }
    },
    {
        "name": "center_to",
        "value": [145, -37.95],
        "bind": {
            "input": "select",
            "options": [
                [145, -37.95],
                [144.6, -37.98],
                [145.5, -37.9],
                [145, -38.3]
            ],
            "labels": ["Melbourne CBD", "Werribee", "Emerald", "Frankston"],
            "name": "Map Centre: "
        }
    }
],
 
  "projection": {
    "type": "mercator",
    "center": { "expr": "center_to" },
    "scale": { "expr": "zoom_level" }
  },
  
  "data": {
    "url": "https://raw.githubusercontent.com/whyamiin3168/FIT3179/main/assignment2/json//melbourne_area.json",
    "format": {"type": "topojson", "feature": "vic_localities"}
  },

  "layer":[
    {
      "transform": [
        {"calculate": "'Data is not available in ' + datum.properties.LOC_NAME", "as": "note"}
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "note",
          "type": "nominal",
          "scale": {"range": ["orange"]},
          "legend": {
            "title": "", 
            "values": ["Data is not available ","in lightgray areas"], 
            "orient": "bottom-right" 
          }
        },
        "tooltip": {
          "field": "note"
          
        }
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.LOC_NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/whyamiin3168/FIT3179/main/assignment2/data/melbourne_suburb_secondary_school_stats.csv"
            },
            "key": "Suburb",
            "fields": ["Indigenous_Enrolments"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "slategray"},
      "encoding": {
        "color": {
          "field": "Indigenous_Enrolments",
          "type": "quantitative"
          
        },
        "tooltip": [
          {"field": "properties.LOC_NAME", "type": "nominal", "title": "Suburb"},
          {"field": "Indigenous_Enrolments", "type": "quantitative"}
        ]
      }
    }
  ]
}