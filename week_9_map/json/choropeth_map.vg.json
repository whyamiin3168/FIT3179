{
        
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Index of Community Socio-Educational Advantage (ICSEA) score across Melbourne and its neighbouring suburbs",
  "width": 1000,
  "height": 800,
  "projection": {"type": "mercator"},
  "data": {
    "url": "https://raw.githubusercontent.com/whyamiin3168/FIT3179/main/week_9_map/json/vic_localities.json",
    "format": {"type": "topojson", "feature": "vic_localities"}
  },

  "layer":[
    {
      "transform": [
        {"calculate": "'Data is not available in ' + datum.properties.LOC_NAME", "as": "note"}
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.LOC_NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/whyamiin3168/FIT3179/main/week_9_map/data/vic_secondary_school_major_cities.csv"
            },
            "key": "Suburb",
            "fields": ["ICSEA"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "ICSEA",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [ 900, 1000, 1100, 1200],
            "range": ["#ffff00", "#ffd700", "#ffaa00", "#ff8000", "#ff0000"]
            }      
                
        },
        "tooltip": [
          {"field": "properties.LOC_NAME", "type": "nominal", "title": "Suburb"},
          {"field": "ICSEA", "type": "quantitative"}
        ]
      }
    }
  ]
}
